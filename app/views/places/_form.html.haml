= simple_form_for(@place) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, required: true, label: false, placeholder: 'Name', input_html: { class: 'form-control'}
    = f.input :address, required: true, label: false, placeholder: 'Address', input_html: { class: 'form-control'}
    = f.input :description, label: false, placeholder: 'Description', input_html: { class: 'form-control'}
    = f.input :phone, required: true, label: false, placeholder: 'Phone', input_html: { class: 'form-control'}
    = f.input :website, required: true, label: false, placeholder: 'Website', input_html: { class: 'form-control'}

  .form-actions
    = f.button :submit